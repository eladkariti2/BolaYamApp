<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@color/app_bg_color"
    android:paddingBottom="10dp" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="190dp"
        android:layout_height="47dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/bola_yam_top_logo" />

    <com.application.ui.RoundedImageView
        android:id="@+id/user_pic"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        app:border_color="#118cff"
        app:border_width="1dp"
        app:oval="true" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#000000" />

    <RelativeLayout
        android:id="@+id/go_to_profile_container"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@id/user_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#3c5c95" >

        <ImageView
            android:id="@+id/facebook_logo"
            android:layout_width="42dp"
            android:layout_height="29dp"
            android:layout_centerVertical="true"
            android:src="@drawable/facebook_logo_login" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/facebook_logo"
            android:padding="10dp"
            android:text="@string/go_to_profile_text"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </RelativeLayout>

</RelativeLayout><!-- From: file:/C:/Users/elad/Desktop/project/BolaYamAppAndroidStudio/BolaYam/res/layout/fb_user_dialog.xml -->