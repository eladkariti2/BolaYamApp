<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/save_location"
        layout="@layout/save_location_layou" />

    <include
        android:id="@+id/load_location"
        layout="@layout/load_location_layout" />

    <RelativeLayout
        android:id="@+id/choose_action_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/save_location_button"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#ffffff"
            android:text="@string/save_location" />

        <Button
            android:id="@+id/load_location_button"
            android:layout_width="match_parent"
            android:layout_below="@id/save_location_button"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:background="#ffffff"
            android:text="@string/load_location" />
    </RelativeLayout>

