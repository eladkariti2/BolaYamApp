<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/app_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/app_bg" />

    <ImageView
        android:id="@+id/splash_img"
        android:layout_width="210dp"
        android:layout_height="173dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:src="@drawable/logo" />

    <ImageView
        android:id="@+id/title_img"
        android:layout_width="310dp"
        android:layout_height="61dp"
        android:layout_below="@id/splash_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo_text" />

    <RelativeLayout
        android:id="@+id/facebook_connect_container"
        android:layout_width="287dp"
        android:layout_height="55dp"
        android:layout_above="@+id/banner_container"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/facebook_login_bg" >

        <ImageView
            android:id="@+id/facebook_logo_login"
            android:layout_width="42dp"
            android:layout_height="29dp"
            android:layout_centerVertical="true"
            android:src="@drawable/facebook_logo_login" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/facebook_logo_login"
            android:text="@string/facebook_login"
            android:textColor="#ffffff"
            android:textSize="22dp" />
    </RelativeLayout>

    <include
        android:id="@+id/banner_container"
        layout="@layout/banner" />

</RelativeLayout><!-- From: file:/C:/Users/elad/Desktop/project/BolaYamAppAndroidStudio/BolaYam/res/layout/facebook_login.xml -->