<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="74dp"
    android:layout_alignParentTop="true"
    android:background="@drawable/top_bar_bg" >

    <RelativeLayout
        android:id="@+id/top_bar_toggle_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/top_bar_toggle_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/top_bar_drawer_toggle" />
    </RelativeLayout>

    <ImageView
        android:layout_width="190dp"
        android:layout_height="47dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/bola_yam_top_logo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/get_luckt_pic"
            android:layout_width="69dp"
            android:layout_height="53dp"
            android:layout_gravity="center_vertical" 
            android:src="@drawable/get_luckt_pic"/>
    </LinearLayout>

</RelativeLayout>